{
  "compilerOptions": {
    "rootDirs": ["src"],
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "lib",
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2017"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": ["**/test.ts", "lib", "node_modules"]
}
